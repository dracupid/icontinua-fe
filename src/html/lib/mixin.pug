mixin css(name)
    link(rel='stylesheet', href= name + '.css?t=_TIMESTAMP_')

mixin js(name)
    script(src= name + '.js?t=_TIMESTAMP_')

mixin pureHead()
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    meta(name='viewport', content='width=device-width,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no')
    meta(http-equiv='Cache-Control', content='no-siteapp')
    meta(name='renderer', content='webkit')
    meta(name='screen-orientation', content='portrait')
    meta(name='x5-orientation', content='portrait')
    meta(name='msapplication-tap-highlight', content='no')
    meta(name='format-detection', content='telephone=no')

mixin head()
    +pureHead()
    +css("/css/antd.min")

mixin foot(withoutAntd)
    script(src="//cdn.bootcss.com/react/15.4.1/react.js")
    script(src="//cdn.bootcss.com/react/15.4.1/react-dom.js")
    script(src='//cdn.bootcss.com/react-router/2.8.1/ReactRouter.min.js')
    script(src="//cdn.bootcss.com/lodash.js/3.10.1/lodash.min.js")
    if (!withoutAntd)
        +js("/js/lib/antd.min")
    script(src="//cdn.bootcss.com/fastclick/1.0.6/fastclick.min.js")
    script.
        FastClick.attach(document.body);
