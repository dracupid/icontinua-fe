include lib/mixin
doctype html

html(lang="zh-cmn-Hans")
    head
        +pureHead()
        meta(name='viewport', content='width=device-width,minimum-scale=1.0,maximum-scale=2.0,user-scalable=yes')
        title 爱康体产品介绍

        style.
            body {
                margin: 0;
            }

            @media (min-width: 800px) {
                body {
                    max-width: 800px;
                    margin: auto;
                }
            }

            img {
                display: block;
                width: 100%;
                margin: 0;
                padding: 0;
            }

        img(src='/img/intro1/1.jpg')
        img(src='/img/intro1/2.jpg')
