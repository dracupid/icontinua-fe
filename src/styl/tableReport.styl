@import "./mixin.styl"
$border = 1px solid #000

body
    background-color white
    font-size 14px

h1
    text-align center
    margin-top 20px

table
    width 92%
    margin auto
    border-collapse collapse
    border-right $border
    border-bottom $border
    thead
        visibility hidden
    td
        border-left $border
        border-top $border
        text-align center

.item-title
    color red
    font-size 16px
    font-weight bold

.title
    font-weight bold
