@import "./mixin.styl"

.ant-tabs-bar
    margin-bottom 0

.header
    input
        font-size 16px
    .ant-input
        border-radius 6px !important
        height 40px !important
    .ant-input-group
        width 100%
    .app-search-box
        flex 6

.ant-search-btn
    color #666
    background-color #f4f4f4
    border-color #d9d9d9
    border-radius 0 5px 5px 0
    margin-left -38px
    position relative
    border-width 0 0 0 1px
    z-index 2
    padding-left 8px
    padding-right 8px
    font-size 20px

.loading
    display block
    text-align center
    margin-top 30px

.ant-spin-dot
    background-color $green !important

.app-block-title
    display flex
    justify-content space-between
    align-items center
    padding 6px 10px

.app-block-wrapper
    display flex
    align-items center
    justify-content center
    flex-direction row
    margin 6px
    .app-block
        flex 1
        text-align center
        display flex
        flex-direction column
        margin 0 1%
        .app-img-wrapper
            width 64px
            height 64px
            margin auto
        img
            display block
            width 100%
            border-radius 10px
        button
            background-color $green
            border-color $green
            width 64px
            margin auto
        .app-block-name
            height 30px
            line-height 30px
            overflow hidden

.app-detail-info
    padding 10px
    background-color white
    box-shadow 1px 5px 3px #D3E4E3
    .app-detail-top
        display flex
        align-items center
        justify-content space-between
    .info-icon
        width 64px
        height 64px
        img
            width 100%
            border-radius 10px
    .info-text-wrapper
        display flex
        flex-direction column
        justify-content center
        flex 1
        margin-left 15px
        font-size 12px
    button
        background-color $green !important
        border-color $green !important
        height 30px
        width 60px
    .app-detail-down
        margin-top 10px

.app-desc
    padding 10px
    background-color inherit

.app-list-item
    padding 10px
    border-bottom 1px solid $green_dark
    display flex
    align-items center
    justify-content space-between
    .info-icon
        width 48px
        height 48px
        img
            width 100%
            border-radius 10px
    .info-text-wrapper
        display flex
        flex-direction column
        justify-content center
        flex 1
        margin-left 12px
        font-size 12px
    .app-desc-short
        flex 2

.btn-load-more
    padding 10px
    text-align center

.not-found
    padding 20px
    text-align center

.ant-notification
    width 90%

.snapshot-img
    width 70%
    margin auto

.slick-slider
    padding-bottom 0 !important
    margin-top 10px
